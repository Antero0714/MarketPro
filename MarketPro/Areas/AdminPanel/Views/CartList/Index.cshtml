@{
    ViewData["Title"] = "CarList";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="card">
        <div class="cart-list">
            <h4 class="font-20 mb-4">Cart list</h4>
            <div class="table-responsive pt-1">
                <table class="cart_table text-nowrap table-centered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Description</th>
                            <th>Quantity</th>
                            <th>Unit Cost</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>#01</td>
                            <td><a href="#">Ergonomic Plastic Ball</a></td>
                            <td><input type="number" value="26"></td>
                            <td><span>$64.3</span></td>
                            <td><span>$270</span> <a href="#"><img src="/dashboard/assets/img/svg/table-colse.svg" class="svg" alt=""></a></td>
                        </tr>
                        <tr>
                            <td>#02</td>
                            <td><a href="#">Tasty Rubber Mouse</a></td>
                            <td><input type="number" value="26"></td>
                            <td><span>$64.3</span></td>
                            <td><span>$396</span> <a href="#"><img src="/dashboard/assets/img/svg/table-colse.svg" class="svg" alt=""></a></td>
                        </tr>
                        <tr>
                            <td>#03</td>
                            <td><a href="#">Tasty Steel Towels</a></td>
                            <td><input type="number" value="26"></td>
                            <td><span>$64.3</span></td>
                            <td><span>$438</span> <a href="#"><img src="/dashboard/assets/img/svg/table-colse.svg" class="svg" alt=""></a></td>
                        </tr>
                        <tr>
                            <td>#04</td>
                            <td><a href="#">Fantastic Metal Chair</a></td>
                            <td><input type="number" value="26"></td>
                            <td><span>$64.3</span></td>
                            <td><span>$460</span> <a href="#"><img src="/dashboard/assets/img/svg/table-colse.svg" class="svg" alt=""></a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="shipping-content mt-5">
                <form class="checkout">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="shipping-fields">
                                <h4 class="mb-4 font-20">Shipping detail</h4>
                                <div class="billing-fields__field-wrapper row">
                                    <p class="form-row col-md-12"><label for="f_name">Your Name</label> <input type="text" id="f_name" class="theme-input-style" placeholder="Type Your Name"></p>
                                    <p class="form-row col-md-6"><label for="email">Email</label> <input type="email" id="email" class="theme-input-style" placeholder="Your Email Address"></p>
                                    <p class="form-row col-md-6"><label for="surname">Sur Name</label> <input class="theme-input-style" id="surname" type="text" placeholder="Your Surname"></p>
                                    <p class="form-row col-md-6"><label for="mobile">Mobile</label> <input type="tel" id="mobile" class="theme-input-style" placeholder="Contact Number"></p>
                                    <p class="form-row col-md-6"><label for="city">City</label> <input type="text" id="city" class="theme-input-style" placeholder="Your City"></p>
                                    <p class="form-row col-12"><label for="address">Address</label> <input type="text" id="address" class="theme-input-style" placeholder="Your Address"></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="billing-fields mt-5 mt-lg-0">
                                <h4 class="mb-4 font-20">Billing Detail</h4>
                                <div class="billing-fields__field-wrapper row">
                                    <p class="form-row col-md-12"><label for="card_number">Card Number</label> <input type="text" id="card_number" class="theme-input-style" placeholder="Card number"></p>
                                    <p class="form-row col-md-6"><label for="exp_date">Expiration Date</label> <input type="text" id="exp_date" class="theme-input-style" placeholder="MM / YY"></p>
                                    <p class="form-row col-md-6"><label for="cvc_code">CVC Code</label> <input class="theme-input-style" id="cvc_code" type="text" placeholder="CVC"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="cart-collaterals">
                <div class="cart_totals calculated_shipping">
                    <table class="shop_table">
                        <tbody>
                            <tr class="cart-subtotal">
                                <th>Subtotal</th>
                                <th><span class="Price-amount amount"><span class="Price-currencySymbol">$</span>2654.36</span></th>
                            </tr>
                            <tr class="cart-tax">
                                <td>Tax (19%)</td>
                                <td><span class="Price-amount amount"><span class="Price-currencySymbol">$</span>154.45</span></td>
                            </tr>
                            <tr class="cart-tax">
                                <td>Discount (5%)</td>
                                <td><span class="Price-amount amount"><span class="Price-currencySymbol">-$</span>54.45</span></td>
                            </tr>
                            <tr class="order-total">
                                <td>Total</td>
                                <td><strong><span class="Price-amount amount"><span class="Price-currencySymbol">$</span>3654.45</span></strong></td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="proceed-to-checkout mt-4 text-center"><a href="#" class="btn btn-w">Order Now</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
