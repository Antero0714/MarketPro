@model IEnumerable<MarketPro.Application.DTOs.Product.ProductDto>

@{
    ViewData["Title"] = "Управление товарами";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Список товаров</h3>
                    <div class="card-tools">
                        <a href="@Url.Action("Create", "Products")" class="btn btn-primary">Создать новый товар</a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Название</th>
                                <th>Цена</th>
                                <th>Тип</th>
                                <th>Магазин</th>
                                <th>Рейтинг</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model ?? Enumerable.Empty<MarketPro.Application.DTOs.Product.ProductDto>())
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.Price.ToString("C", new System.Globalization.CultureInfo("en-US"))</td>
                                    <td>@item.ProductTypeName</td>
                                    <td>@item.StoreName</td>
                                    <td>@item.Rating</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                            <i class="icofont-edit"></i> Редактировать
                                        </a>
                                        <a href="@Url.Action("Details", "Products", new { id = item.Id, area = "" })" class="btn btn-info btn-sm">
                                            <i class="icofont-info-circle"></i> Детали
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                            <i class="icofont-trash"></i> Удалить
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 