@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="text-center mb-0">Доступ запрещен</h3>
                </div>
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-triangle text-danger" style="font-size: 48px;"></i>
                    <h4 class="mt-3">Извините, у вас нет доступа к этой странице.</h4>
                    <p class="text-muted">Обратитесь к администратору, если считаете, что это ошибка.</p>
                    <div class="mt-4">
                        @if (!string.IsNullOrEmpty(ViewData["ReturnUrl"]?.ToString()))
                        {
                            <a href="@ViewData["ReturnUrl"]" class="btn btn-secondary me-2">Вернуться назад</a>
                        }
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Вернуться на главную</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 