@{
    ViewData["Title"] = "Locked out";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center text-danger">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <p class="text-center">
                        This account has been locked out, please try again later.
                    </p>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Login" class="btn btn-primary">Return to Login</a>
                </div>
            </div>
        </div>
    </div>
</div> 