@model IEnumerable<MarketPro.Domain.Entities.WishlistItem>
@{
    ViewData["Title"] = "Wishlist Page";
}

<!-- ========================= Breadcrumb Start =============================== -->
<div class="breadcrumb mb-0 py-26 bg-main-two-50">
    <div class="container container-lg">
        <div class="breadcrumb-wrapper flex-between flex-wrap gap-16">
            <h6 class="mb-0">My Wishlist</h6>
            <ul class="flex-align gap-8 flex-wrap">
                <li class="text-sm">
                    <a href="@Url.Action("Index", "Home")" class="text-gray-900 flex-align gap-8 hover-text-main-600">
                        <i class="ph ph-house"></i>
                        Home
                    </a>
                </li>
                <li class="flex-align">
                    <i class="ph ph-caret-right"></i>
                </li>
                <li class="text-sm text-main-600"> Wishlist </li>
            </ul>
        </div>
    </div>
</div>
<!-- ========================= Breadcrumb End =============================== -->

<!-- ================================ Cart Section Start ================================ -->
<section class="cart py-80">
    <div class="container container-lg">
        <div class="row gy-4">
            <div class="col-lg-11">
                <div class="cart-table border border-gray-100 rounded-8">
                    <div class="overflow-x-auto scroll-sm scroll-sm-horizontal">
                        <table class="table rounded-8 overflow-hidden">
                            <thead>
                                <tr class="border-bottom border-neutral-100">
                                    <th class="h6 mb-0 text-lg fw-bold px-40 py-32 border-end border-neutral-100">Delete</th>
                                    <th class="h6 mb-0 text-lg fw-bold px-40 py-32 border-end border-neutral-100">Product Name</th>
                                    <th class="h6 mb-0 text-lg fw-bold px-40 py-32 border-end border-neutral-100">Unit Price</th>
                                    <th class="h6 mb-0 text-lg fw-bold px-40 py-32 border-end border-neutral-100">Stock Status</th>
                                    <th class="h6 mb-0 text-lg fw-bold px-40 py-32"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr class="">
                                            <td class="px-40 py-32 border-end border-neutral-100">
                                                <button type="button" 
                                                        class="remove-from-wishlist remove-tr-btn flex-align gap-12 hover-text-danger-600"
                                                        data-product-id="@item.ProductId">
                                                    <i class="ph ph-x-circle text-2xl d-flex"></i>
                                                    Remove
                                                </button>
                                            </td>
                                            <td class="px-40 py-32 border-end border-neutral-100">
                                                <div class="table-product d-flex align-items-center gap-24">
                                                    <a href="@Url.Action("Details", "Products", new { id = item.ProductId })" class="table-product__thumb border border-gray-100 rounded-8 flex-center">
                                                        <img src="@(item.Product.Images?.FirstOrDefault()?.ImageUrl ?? "/marketPro/assets/images/thumbs/no-image.png")" 
                                                             alt="@item.Product.Name"
                                                             style="width: 115px; height: 140px; object-fit: contain;">
                                                    </a>
                                                    <div class="table-product__content text-start">
                                                        <h6 class="title text-lg fw-semibold mb-8">
                                                            <a href="@Url.Action("Details", "Products", new { id = item.ProductId })" class="link text-line-2">@item.Product.Name</a>
                                                        </h6>
                                                        <div class="flex-align gap-16 mb-16">
                                                            <div class="flex-align gap-6">
                                                                <span class="text-md fw-medium text-warning-600 d-flex"><i class="ph-fill ph-star"></i></span>
                                                                <span class="text-md fw-semibold text-gray-900">@item.Product.Rating</span>
                                                            </div>
                                                            <span class="text-sm fw-medium text-gray-200">|</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="px-40 py-32 border-end border-neutral-100">
                                                <span class="text-lg h6 mb-0 fw-semibold">$@item.Product.Price.ToString("F2")</span>
                                            </td>
                                            <td class="px-40 py-32 border-end border-neutral-100">
                                                <span class="text-lg h6 mb-0 fw-semibold">In Stock</span>
                                            </td>
                                            <td class="px-40 py-32">
                                                <button type="button" 
                                                        class="add-to-cart btn btn-main-two rounded-8 px-64"
                                                        data-product-id="@item.ProductId">
                                                    Add To Cart <i class="ph ph-shopping-cart"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-32">
                                            <h5>Your wishlist is empty</h5>
                                            <a href="@Url.Action("Index", "Catalog")" class="btn btn-main mt-3">Continue Shopping</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ================================ Cart Section End ================================ -->